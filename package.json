{
  "name": "@dannypas00/danny-ui",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "repository": {
    "url": "https://github.com/dannypas00/danny-ui"
  },
  "scripts": {
    "dev": "vite",
    "watch": "vite build --watch --minify=false",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:storybook": "test-storybook --browsers=chromium,firefox,webkit",
    "test:lint": "oxlint . --deny-warnings -D correctness --ignore-path .gitignore",
    "test:format": "prettier --check src/",
    "test:types": "vue-tsc --noEmit",
    "test:ci": "run-p test:lint test:format test:types",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "format": "prettier --write src/",
    "fix-ci": "run-s format lint type-check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/danny-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/danny-ui.js"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@tailwindcss/vite": "^4.0.9",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@storybook/addon-essentials": "^8.6.0",
    "@storybook/addon-interactions": "^8.6.0",
    "@storybook/blocks": "^8.6.0",
    "@storybook/test": "^8.6.0",
    "@storybook/test-runner": "^0.21.3",
    "@storybook/vue3": "^8.6.0",
    "@storybook/vue3-vite": "^8.6.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/eslint-plugin": "1.1.31",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.21.0",
    "eslint-plugin-oxlint": "^0.15.12",
    "eslint-plugin-storybook": "^0.11.3",
    "eslint-plugin-vue": "^9.32.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.15.12",
    "prettier": "^3.5.2",
    "storybook": "^8.6.0",
    "tailwindcss": "^4.0.8",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.0.7",
    "vue-tsc": "^2.2.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
